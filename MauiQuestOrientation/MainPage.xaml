<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MauiQuestOrientation.Resources.Strings"
             x:Class="MauiQuestOrientation.MainPage">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="{x:Static resx:AppResources.Game}" FontSize="32" HorizontalOptions="Center" />
        <Button Text="{x:Static resx:AppResources.StartGame}" Clicked="OnStartGameClicked"/>
        <Button Text="{x:Static resx:AppResources.Continue}" Clicked="OnContinueClicked"/>
        <Button Text="{x:Static resx:AppResources.Settings}" Clicked="OnSettingsClicked"/>
    </VerticalStackLayout>
</ContentPage>
