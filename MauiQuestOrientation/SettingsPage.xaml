<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:MauiQuestOrientation.Resources.Strings"
             x:Class="MauiQuestOrientation.SettingsPage"
             Title="{x:Static resx:AppResources.Settings}">
    <VerticalStackLayout>
        <Label 
            Text="{x:Static resx:AppResources.Language}" 
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Picker x:Name="LanguagePicker"/>
        <Button Text="{x:Static resx:AppResources.Save}" Clicked="OnSaveClicked"/>
    </VerticalStackLayout>
</ContentPage>
